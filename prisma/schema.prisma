// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  attempts  Attempt[]
}

model QuizPack {
  id          String     @id @default(cuid())
  title       String
  subject     String
  description String?
  duration    Int        // dalam menit
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  questions   Question[]
  attempts    Attempt[]
}

model Question {
  id           String   @id @default(cuid())
  quizPackId   String
  questionText String?  // opsional, bisa hanya gambar
  imageUrl     String?  // URL gambar soal
  type         String   // single | multiple | boolean
  options      String   // JSON array
  correctAnswer String  // JSON (single: "A", multiple: ["A","C"], boolean: "Benar")
  explanation  String?  // opsional
  orderIndex   Int      @default(0)
  createdAt    DateTime @default(now())
  
  quizPack     QuizPack @relation(fields: [quizPackId], references: [id], onDelete: Cascade)
  
  @@index([quizPackId])
}

model Attempt {
  id          String   @id @default(cuid())
  studentId   String
  quizPackId  String
  answers     String   // JSON: {questionId: answer}
  score       Int
  totalQuestions Int
  correctCount   Int
  duration    Int      // detik yang digunakan
  startedAt   DateTime
  submittedAt DateTime @default(now())
  
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  quizPack    QuizPack @relation(fields: [quizPackId], references: [id], onDelete: Cascade)
  
  @@index([studentId])
  @@index([quizPackId])
  @@index([quizPackId, score, duration])
}
